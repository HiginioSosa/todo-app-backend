# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/todo_db?schema=public"

# JWT Configuration
# IMPORTANTE: En producción, generar un secreto fuerte y aleatorio
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION"
JWT_EXPIRATION="1h"  # En producción, usar 1h o menos (desarrollo: 24h)

# Server Configuration
PORT=3000
NODE_ENV="development"  # development | production | test

# CORS Configuration
# En desarrollo: usar "*" o URLs locales
# En producción: DEBE ser la URL exacta del frontend (sin barra final)
# Múltiples orígenes separados por coma: "https://example.com,https://www.example.com"
CORS_ORIGIN="http://localhost:5173"

# Prisma Logging
# Niveles: query | info | warn | error
PRISMA_LOG_LEVEL="info"  # En producción usar "error"